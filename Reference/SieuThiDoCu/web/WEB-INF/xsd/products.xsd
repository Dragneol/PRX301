<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.thang.com/XMLSchema/thang"
           xmlns="http://www.thang.com/XMLSchema/thang"
           elementFormDefault="qualified">
    <xs:element name="products">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="product" type="Product" maxOccurs="unbounded" />
                <xs:element name="nextPage" type="xs:string" minOccurs="0"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="Product">
        <xs:sequence>
            <xs:element name="id" type="xs:integer" minOccurs="0"/>
            <xs:element name="name" type="xs:string" minOccurs="0"/>
            <xs:element name="categoryId" type="xs:string" minOccurs="0" />
            <xs:element name="link" type="xs:string" minOccurs="0" />
            <xs:element name="price" type="xs:positiveInteger" default='1' minOccurs="0" />
            <xs:element name="priceOld" type="xs:positiveInteger" default='1' minOccurs="0" />
            <xs:element name="status" type="xs:decimal" default="90" minOccurs="0"/>
            <xs:element name="rate" type="xs:decimal" minOccurs="0"/>
            <xs:element name="description" type="xs:string" minOccurs="0" />
            <xs:element name="images" type="Images" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="Images">
            <xs:sequence>
                <xs:element name="imageUrl" type="xs:string" maxOccurs="unbounded" />
            </xs:sequence>
    </xs:complexType>
</xs:schema>
