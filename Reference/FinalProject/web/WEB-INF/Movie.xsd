<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="http://nguyenviethung.com/movie"
           targetNamespace="http://nguyenviethung.com/movie"
           elementFormDefault="qualified">
    <xs:element name="Movie">
        <xs:complexType>
            <xs:all>
                <xs:element name="id" type="xs:int"/>
                <xs:element name="VietnameseName" type="xs:string"/>
                <xs:element name="EnglishName" type="xs:string"/>
                <xs:element name="description" type="xs:string"/>
                <xs:element name="duration" type="xs:int"/>
                <xs:element name="director" type="xs:string"/>
                <xs:element name="stars" type="xs:string"/>
                <xs:element name="category" type="xs:string"/>
                <xs:element name="languages" type="xs:string"/>
                <xs:element name="type" type="xs:string"/>
                <xs:element name="imageUrl" type="xs:string"/>
            </xs:all>
        </xs:complexType>
    </xs:element>
</xs:schema>
